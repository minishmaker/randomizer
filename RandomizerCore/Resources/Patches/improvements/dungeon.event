	POIN drawTextHistory
	POIN historyTable
	//figure out how many lines are being occupied by other displays
	#ifdef timerOption
		#ifdef counterOption
			WORD 2
		#else
			WORD 1
		#endif
	#else
		#ifdef counterOption
			WORD 1
		#else
			WORD 0
		#endif
	#endif
	WORD historyOption
	
	ALIGN 4
	drawTextHistory:
